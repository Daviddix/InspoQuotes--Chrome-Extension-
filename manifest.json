{
    "manifest_version" : 3,
    "name" : "InspoQuotes",
    "description" : "Get inspirational quotes said by historical figures sent to you via notifications",
    "version" : "1.03",
    "action" :{
        "default_popup" : "popup.html" 
    },
    "background":{
        "service_worker":"background.js"
    },    
    "icons":{
        "16" : "assets/images/glow.png",
        "32" : "assets/images/glow.png",
        "64" : "assets/images/logo-64.png"
    },
    "permissions" : [
        "notifications",
        "alarms",
        "storage"
    ],
    "host_permissions": ["https://api.api-ninjas.com/"]
}